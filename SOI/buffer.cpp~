#include "buffer.h"

#include <stdio.h>
#include <stdlib.h>

#include <sys/shm.h>
#include <sys/stat.h>

int get_size_buffer(Buffer* buf)
{
    return buf->size;   
}

char pop_buffer(Buffer* buf)
{
     char c;
     
     if(buf->size == 0)
     {
       fprintf(stderr, "pop_buffer: buffer is empty");
       return -1;
     }
     
     c = buf->letter;
     buf->size--;
     buf->letter = '\0';
       
     return c;
}

void push_buffer(Buffer* buf, char c)
{          
     if(buf->size == 1)     
     {
       fprintf(stderr, "push_buffer: buffer is full");
       return;
     }
       
     buf->letter = c;
     buf->size++;
}

void init_buffer(Buffer* buf)
{
	buf->letter = '\0';	
	buf->count = 0;
}
